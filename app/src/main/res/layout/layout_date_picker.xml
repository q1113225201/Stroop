<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/layout_picker_top" />

    <com.aigestudio.wheelpicker.widgets.WheelDatePicker
        android:id="@+id/wheelDatePicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:wheel_atmospheric="true"
        app:wheel_curved="true"
        app:wheel_item_text_color="#EBEBEB"
        app:wheel_item_text_size="24sp"
        app:wheel_selected_item_text_color="#000000" />
</LinearLayout>